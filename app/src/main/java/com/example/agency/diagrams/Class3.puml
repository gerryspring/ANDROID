
@startuml
package DB <<Database>> {

   class DataBase extends SQLiteOpenHelper{
   + onCreate   () : void
   + onUpgrade() : void
   }
}

class DBManager{
   + Connection : DataBase
   + DB: SQLiteDataBase

   + startDB() : {static} boolean
   + createCar() : {static} boolean
}



class MainActivity{
    + btnCars,btnClients,.. : Button
    - listeners : MainListeners

    + onCreate() : void
    + startDB() : boolean
}
class CRUDActivity{
   + crud : CRUD
   - listeners : CRUDListeners
   + pos : String
   + lb1,lb2,lb3.. : TextView
   + box1,box2,box3 .. : EditText
   + source : ImageView
   + btn1,btn2,btn3.. : Button

   # onCreate() : void
   + setInterface() : void
   + update() : void
   + setup() : void
   + getBox() : String
}

