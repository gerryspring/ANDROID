'
'    # onCreate () : void
'}
abstract class CRUD {
# labels [] : String
# source : String

# setLabels : {abstract} void
# setSource : {abstract} void
+ getLabels [] : String

}

class MainListeners {
    + activity : MainActivity

    + onClick() : void

}

class CRUDListeners  {
   + activity : CRUDActivity
    + onClick() : void
}

class CRUDCar extends CRUD
class CRUDClient extends CRUD
class CRUDService extends CRUD


DB -[hidden]-> DBManager
DataBase -* DBManager
DBManager -.> MainActivity
MainActivity -l> DBManager

MainActivity -[hidden]-> CRUDActivity
DBManager <- CRUDActivity
CRUDListeners -* CRUDActivity
CRUDActivity *-- CRUD
MainListeners -- MainActivity
<>d1
MainActivity -- d1
d1 -l- CRUDActivity

@enduml
